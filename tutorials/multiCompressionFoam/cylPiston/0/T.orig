FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 1208.8;

boundaryField
{
/* Inlet */
    "(injection|inlet)(X|Y)(m|p)"
    {
        type            fixedValue;
        value           uniform 332;
    }

/* Outlet */
    outlet
    {
        type            inletOutlet;
        inletValue      uniform 769.3;
        value           $inletValue;
    }

/* Walls */
    "piston|valve(Head|Stem)|walls"
    {
        type            zeroGradient;
    }

/* ACMI patches */
    "(inner|outer)ACMI(1|2)_blockage"
    {
        type            zeroGradient;
    }
    "(inner|outer)ACMI(1|2)_couple"
    {
        type            cyclicACMI;
        value           $internalField;
    }
}

