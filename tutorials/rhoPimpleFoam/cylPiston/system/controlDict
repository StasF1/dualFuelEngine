FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "../../../resources/engineProperties/MAN-BW"

endTimeCA       #calc "($EVO + 180)*$deltaTCA";


application     rhoPimpleFoam; // rhoPimpleFoam \ moveMesh

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         0.48;

deltaT          1e-5;

writeControl    adjustableRunTime;

writeInterval   $deltaTCA;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression false;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

adjustTimeStep  true;

maxCo           0.5;

functions
{
    #includeFunc flowRatePatch(name=inletXm)
    #includeFunc flowRatePatch(name=injectionXm)
    #includeFunc flowRatePatch(name=outlet)

    #includeFunc residuals
    #includeFunc MachNo
    #includeFunc CourantNo
    #includeFunc writeObjects(e, K)
    #includeFunc writeCellVolumes

    volAverageFieldValues
    {
        type            volFieldValue;
        libs            ("libfieldFunctionObjects.so");
        writeControl    timeStep;
        writeInterval   1;
        log             true;
        writeFields     false;
        writeVolume     true;
        regionType      cellZone;
        name            cylinder;
        operation       volAverage;
        fields
        (
            p T rho e K
        );
    }

    totalEnergy
    {
        type            add;
        libs            ("libfieldFunctionObjects.so");

        fields          (e K);

        executeControl  writeTime;
        writeControl    writeTime;
    }
}


