FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     rhoPimpleFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         0.0025;

deltaT          1e-5;

writeControl    adjustableRunTime;

writeInterval   $deltaT;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression false;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

functions
{
    #includeFunc CourantNo

    #includeFunc MachNo
    #includeFunc writeObjects(e, K)
    #includeFunc add(e, K)
    #includeFunc cellMin(p,T,Ma,rho,e)
    #includeFunc cellMax(p,T,Ma,rho,e)

    #includeFunc flowRatePatch(name=inlet)
    #includeFunc flowRatePatch(name=outlet)

    volFieldValue(operation=volAverage)
    {
        type            volFieldValue;
        libs            ("libfieldFunctionObjects.so");
        writeControl    outputTime;
        log             true;
        writeFields     false;
        regionType      all;
        operation       volAverage;
        fields
        (
            p T rho e K
        );
    }
}

// ************************************************************************* //
